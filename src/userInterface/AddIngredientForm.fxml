<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="bg" stylesheets="@AddIngredientForm.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.AddIngredientFormController">
   <children>
      <VBox fx:id="vBox" prefHeight="600.0" prefWidth="800.0">
         <children>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="addIngredient_Button" layoutX="692.0" layoutY="26.0" mnemonicParsing="false" onAction="#addNewIngredient" prefHeight="50.0" prefWidth="50.0" textFill="WHITE">
                     <font>
                        <Font name="Ebrima Bold" size="15.0" />
                     </font></Button>
                  <Label layoutX="28.0" layoutY="18.0" prefHeight="65.0" prefWidth="498.0" text="Step 2 Add ingredients" textFill="#a42e2e">
                     <font>
                        <Font name="Comic Sans MS Bold" size="40.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <ScrollPane prefHeight="400.0" prefWidth="800.0">
              <content>
                <AnchorPane fx:id="pane" minHeight="0.0" minWidth="0.0" prefWidth="785.0">
                     <children>
                        <VBox fx:id="vBox" prefWidth="785.0" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="ingredientSubmit" layoutX="63.0" layoutY="25.0" mnemonicParsing="false" onAction="#ingredientSubmit" prefHeight="50.0" prefWidth="50.0" textFill="WHITE">
                     <font>
                        <Font name="Ebrima Bold" size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="next_Button" layoutX="640.0" layoutY="25.0" mnemonicParsing="false" onAction="#goToAddStep" prefHeight="50.0" prefWidth="99.0" text="Next" textFill="WHITE">
                     <font>
                        <Font name="Ebrima Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
