<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.AddIngredientFormController">
   <children>
      <VBox fx:id="vBox" prefHeight="600.0" prefWidth="800.0">
         <children>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="addIngredient_Button" layoutX="644.0" layoutY="38.0" mnemonicParsing="false" onAction="#addNewIngredient" text="Add ingredient" />
               </children>
            </Pane>
            <ScrollPane prefHeight="400.0" prefWidth="800.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="1000.0" prefWidth="785.0">
                     <children>
                        <VBox fx:id="vBox" prefHeight="1000.0" prefWidth="785.0" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="ingredientSubmit" layoutX="80.0" layoutY="28.0" mnemonicParsing="false" onAction="#ingredientSubmit" prefHeight="44.0" prefWidth="95.0" text="Back">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="next_Button" layoutX="592.0" layoutY="28.0" mnemonicParsing="false" onAction="#goToAddStep" prefHeight="44.0" prefWidth="112.0" text="Next">
                     <font>
                        <Font name="Ebrima Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
      <Label layoutX="30.0" layoutY="20.0" prefHeight="65.0" prefWidth="498.0" text="Step 2 Add ingredients">
         <font>
            <Font name="Comic Sans MS" size="40.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
