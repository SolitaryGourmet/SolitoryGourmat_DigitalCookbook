<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@SearchForm.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.SearchFormController">
   <children>
      <Pane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;">
         <children>
            <TextField fx:id="textField" layoutX="149.0" layoutY="309.0" prefHeight="59.0" prefWidth="430.0" promptText="Recipe name">
               <font>
                  <Font name="Ebrima" size="26.0" />
               </font></TextField>
            <Button fx:id="search" layoutX="595.0" layoutY="301.0" mnemonicParsing="false" onAction="#searchByName" prefHeight="76.0" prefWidth="76.0" textFill="WHITE">
               <font>
                  <Font name="Ebrima Bold" size="20.0" />
               </font></Button>
            <Button layoutX="104.0" layoutY="17.0" mnemonicParsing="false" onAction="#searchByCategory" prefHeight="50.0" prefWidth="167.0" text="Category" textFill="WHITE">
               <font>
                  <Font name="Ebrima Bold" size="24.0" />
               </font></Button>
            <Button fx:id="gotoHome_button" layoutX="23.0" layoutY="17.0" mnemonicParsing="false" onAction="#gotoHome" prefHeight="50.0" prefWidth="50.0" textFill="WHITE">
               <font>
                  <Font name="Ebrima Bold" size="20.0" />
               </font></Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
