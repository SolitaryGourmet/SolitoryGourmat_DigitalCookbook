<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@SearchForm.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SearchFormController">
   <children>
      <Pane fx:id="bg" prefHeight="600.0" prefWidth="800.0">
         <children>
            <Button fx:id="gotoHome_button" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#gotoHome" prefHeight="50.0" prefWidth="50.0" textFill="WHITE">
               <font>
                  <Font name="Ebrima Bold" size="20.0" />
               </font></Button>
            <Pane fx:id="pane" layoutY="90.0" prefHeight="419.0" prefWidth="806.0">
               <children>
                  <TextField fx:id="textField" layoutX="93.0" layoutY="189.0" prefHeight="59.0" prefWidth="482.0" promptText="Recipe name">
                     <font>
                        <Font name="Ebrima" size="26.0" />
                     </font>
                  </TextField>
                  <Button fx:id="category" layoutX="678.0" layoutY="180.0" mnemonicParsing="false" onAction="#searchByCategory" prefHeight="76.0" prefWidth="76.0" textFill="WHITE">
                     <font>
                        <Font name="Ebrima Bold" size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="search" layoutX="593.0" layoutY="180.0" mnemonicParsing="false" onAction="#searchByName" prefHeight="76.0" prefWidth="76.0" textFill="WHITE">
                     <font>
                        <Font name="Ebrima Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </Pane>
   </children>
</AnchorPane>
