<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.AddStepFormController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="addStep_Button" layoutX="666.0" layoutY="38.0" mnemonicParsing="false" onAction="#addNewStep" text="Add new step" />
                  <Label layoutX="30.0" layoutY="20.0" prefHeight="65.0" prefWidth="498.0" text="Step 3 Add cooking steps">
                     <font>
                        <Font name="Comic Sans MS" size="40.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <ScrollPane prefHeight="400.0" prefWidth="800.0">
               <content>
                  <VBox fx:id="vBox" prefHeight="1000.0" prefWidth="785.0" />
               </content>
            </ScrollPane>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="submit_Button" layoutX="71.0" layoutY="28.0" mnemonicParsing="false" onAction="#submitStep" prefHeight="44.0" prefWidth="101.0" text="Back">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="next_Button" layoutX="626.0" layoutY="28.0" mnemonicParsing="false" onAction="#goToAddCategory" prefHeight="44.0" prefWidth="112.0" text="Next">
                     <font>
                        <Font name="Ebrima Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
