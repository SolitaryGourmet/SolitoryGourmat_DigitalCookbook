<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="bg" stylesheets="@AddStepForm.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="userInterface.AddStepFormController">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="addStep_Button" layoutX="697.0" layoutY="32.0" mnemonicParsing="false" onAction="#addNewStep" prefHeight="50.0" prefWidth="50.0" textFill="WHITE">
                     <font>
                        <Font name="Ebrima Bold" size="20.0" />
                     </font></Button>
                  <Label layoutX="31.0" layoutY="25.0" prefHeight="65.0" prefWidth="531.0" text="Step 3 Add cooking steps" textFill="#a42e2e">
                     <font>
                        <Font name="Comic Sans MS Bold" size="40.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <ScrollPane fx:id="scrollPane" prefHeight="400.0" prefWidth="800.0">
               <content>
                  <VBox fx:id="vBox" prefWidth="785.0" />
               </content>
            </ScrollPane>
            <Pane prefHeight="100.0" prefWidth="800.0">
               <children>
                  <Button fx:id="submit_Button" layoutX="72.0" layoutY="25.0" mnemonicParsing="false" onAction="#submitStep" prefHeight="50.0" prefWidth="50.0">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="next_Button" layoutX="639.0" layoutY="28.0" mnemonicParsing="false" onAction="#goToAddCategory" prefHeight="44.0" prefWidth="100.0" text="Next" textFill="WHITE">
                     <font>
                        <Font name="Ebrima Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
